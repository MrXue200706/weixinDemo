 <view class="weui-panel__bd">
    <navigator wx:for="{{newsList}}" url="../newsDetail/newsDetail?id={{item.id}}" class="weui-media-box weui-media-box_appmsg">
        <view class="weui-media-box__hd">
            <image class="weui-media-box__thumb" src="{{item.img_url}}"></image>
        </view>
        <view class="weui-media-box__bd">
            <text class="weui-media-box__title">{{item.title}}</text>
            <text decode="false" class="weui-media-box__desc">{{item.zhaiyao}}</text>
        </view>
    </navigator>
</view> 
